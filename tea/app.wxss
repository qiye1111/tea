/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
/*灰色分隔块*/
.divider{
  width:100%;
  height:30rpx;
  background:#f1f1f1;
}
/*项目条*/
.cell{
  background:#fff;
  font-size:16px;
}
.cell-item{
  padding:20rpx 30rpx;
  border-bottom:1rpx solid #ddd;
}
/*箭头*/
.arrow{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.arrow::after{
  content:'';
  width:15rpx;
  height:15rpx;
  border-top:3rpx solid #ccc;
  border-right:3rpx solid #aaa;
  transform: rotate(45deg)
}

