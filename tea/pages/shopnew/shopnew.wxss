.list{
  width:100%;
  height:100%;
}
.list-header image{
  width:100%;
  height:175rpx;
}
.list-content{
  display: flex;
  justify-content: space-around;
  height:60rpx;
  background:#ddd;
  align-items: center;
  margin-bottom:20rpx;
}
.content-item{
  font-size:14px;
  font-weight:bold;  
}
.card{
  background:#ddd;
}
.card-item{  
  width:100%;  
  border:1rpx solid #ccc;  
  box-shadow: 2%;
  margin-bottom:40rpx;
  background:#fff;
}
.card-header{
  font-size:18px;
  font-weight:bold;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  border-bottom:3rpx solid #ddd;
  padding:20rpx 30rpx;
}
.card-content image{
  width:100%;
  height:540rpx;
  margin:0 auto;
  border-bottom:3rpx solid #ddd;  
}
.card-desc{
  border-bottom:3rpx solid #ddd;  
  padding:20rpx 20rpx;
  font-size:16px;  
}
.card-footer{
  display: flex;
  justify-content: space-between;
  padding:10rpx 50rpx;
}
.card-footer .footer-price{
  font-size:20px;
  color:red;
}
.card-footer .footer-desc{
  font-size:16px;
  color:#ccc;
}
.card-footer .footer-desc:hover{
  color:#0f9670;
}
